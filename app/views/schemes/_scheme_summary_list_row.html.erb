<div class="<%= "govuk-summary-list__row#{can_change_scheme_answer?(attribute[:name], @scheme) && attribute[:edit] ? '' : ' govuk-summary-list__row--no-actions'}" %>">
    <dt class="govuk-summary-list__key">
        <%= attribute[:name].to_s %>
    </dt>
    <% if scheme.errors[attribute[:id].to_sym].count > 0 %>
        <dd class="govuk-summary-list__value app-summary-list__value--error">
            <p class="govuk-error-message">
                <span class="govuk-error-message govuk-visually-hidden">Error:</span> <%= scheme.errors[attribute[:id].to_sym][0] %>
            </p>
            <%= details_html(attribute, @scheme) %>
        </dd>
    <% else %>
        <dd class="govuk-summary-list__value">
            <%= details_html(attribute, @scheme) %>
        </dd>
    <% end %>

    <% if can_change_scheme_answer?(attribute[:name], scheme) && attribute[:edit] %>
      <dd class="govuk-summary-list__actions">
        <a class="govuk-link" href="<%= change_link %>"><%= change_link_text(attribute[:id], @scheme) %></a>
      </dd>
    <% end %>
</div>
