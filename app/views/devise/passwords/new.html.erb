<% content_for :title, "Reset password" %>

<% content_for :before_content do %>
  <%= govuk_back_link(
    text: 'Back',
    href: :back,
  ) %>
<% end %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <%= f.govuk_error_summary %>

      <h1 class="govuk-heading-l">
        <%= content_for(:title) %>
      </h1>

      <p class="govuk-body">Enter the email address you used to create your account.</p>
      <p class="govuk-body">Weâ€™ll email you a link to reset your password. This link will expire in 3 hours.</p>

      <%= f.govuk_email_field :email,
        label: { text: "Email address" },
        autocomplete: "email",
        spellcheck: "false" %>

      <%= f.govuk_submit "Send email" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
