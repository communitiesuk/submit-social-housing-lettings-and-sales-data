<% content_for :title, current_user == @user ? "Change your personal details" : "Change #{@user.name}â€™s personal details" %>

<% content_for :before_content do %>
  <%= govuk_back_link(
    text: 'Back',
    href: :back,
  ) %>
<% end %>

<%= form_for(@user, as: :user, html: { method: :patch }) do |f| %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <%= f.govuk_error_summary %>

      <h1 class="govuk-heading-l">
        <%= content_for(:title) %>
      </h1>

      <%= f.govuk_text_field :name,
        autocomplete: "name"
      %>

      <%= f.govuk_email_field :email,
        label: { text: "Email address" },
        autocomplete: "email",
        spellcheck: "false"
      %>

      <%= f.govuk_collection_radio_buttons :is_dpo,
        [OpenStruct.new(id: false, name: "No"), OpenStruct.new(id: true, name: "Yes")],
        :id,
        :name,
        inline: true,
        legend: { text: "Are they a data protection officer?", size: "m" }
      %>

      <%= f.govuk_submit "Save changes" %>
    </div>
  </div>
<% end %>
